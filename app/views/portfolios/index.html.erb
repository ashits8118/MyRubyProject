<h1>Portfolio Items </h1>


 <%= link_to  "Create new Portfolio Item", new_portfolio_path%>


<%  @portfolio_items.each do|portfolio| %>
    <p><%= link_to portfolio.title, portfolio_show_path(portfolio) %></p>
    <p><%= portfolio.subtitle %></p>
    <%= image_tag portfolio.thumb_image if !portfolio.thumb_image.nil? %>
    <%= link_to "Edit", edit_portfolio_path(portfolio) %>
    <%= link_to 'Delete Portfolio Item', portfolio_path(portfolio.id), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>